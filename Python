def calculate_map(systolic_bp, diastolic_bp):
    map = (2 * diastolic_bp + systolic_bp) / 3
    return map


# Get input from the user
systolic_bp = float(input("Enter the systolic blood pressure (mmHg): "))
diastolic_bp = float(input("Enter the diastolic blood pressure (mmHg): "))

# Calculate the MAP
map = calculate_map(systolic_bp, diastolic_bp)

# Display the MAP
print("The Mean Arterial Pressure (MAP) is:", map, "mmHg")
